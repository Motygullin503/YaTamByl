<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ksu.motygullin.yatambyl.activities.RecordingActivity"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/rec_toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_marginTop="2dp"

        app:cardCornerRadius="5dp"
        app:contentPadding="10dp">

        <TextView
            android:id="@+id/item_name"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:text="Первое четверостишье"
            android:textSize="20sp" />


        <TextView

            android:id="@+id/name_and_author"
            style="@style/TextAppearance.AppCompat.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:text="'Парус' М.Ю.Лермонтов"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="italic" />


        <ScrollView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:layout_marginTop="100dp">

            <TextView
                android:id="@+id/poem_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Текст произведения"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/br"
                style="@style/AlertDialog.AppCompat.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"
                android:gravity="start"
                android:text="Нажмите, чтобы начать запись"
                android:textSize="20sp"
                android:textStyle="italic" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_record"
                android:layout_above="@+id/br"
                android:layout_centerHorizontal="true" />

            <android.support.design.widget.FloatingActionButton
                android:visibility="gone"
                android:id="@+id/stop_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_stop"
                android:layout_above="@+id/br"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
